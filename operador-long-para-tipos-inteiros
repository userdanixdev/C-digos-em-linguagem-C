#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[])
 {
long long int x = 2147483647; // <---<-limite para numeros inteiros//
// existe uma forma para aumentar usando o operador LONG//
//Se colocar somente o operador LONG ira ocorrer estouto-memory//
 	
 	printf("Tamanho de x em bytes:  %d\n", sizeof x);
 	
 	printf("Valor de x: %lld\n",x);
	x++;
	printf("valor de x:  %lli\n", x);
/* colocar sempre o L e L de referencia dentro da funcao 
SHOrt apenas uma vez,LONG 2x vezes */

	
	return 0;
}
